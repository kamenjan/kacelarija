<%- include('templates/header'); %>

<p>Welcome to <%= title %></p>
<div class="content">
	<table class="balance">
		<thead>
		<tr>
			<th>Ticker</th>
			<th>Balance</th>
			<th>Available</th>
			<th>Source</th>
			<th>Price BTC</th>
			<th>Price USD</th>
			<th>Total BTC</th>
			<th>Total USD</th>
		</tr>
		</thead>
		<tbody>
		<% if (balance) { %>
			<% balance.forEach(function(ticker){ %>
			<tr>
				<td><%= ticker.Currency %></td>
				<td><%= ticker.Balance %></td>
				<td><%= ticker.Available %></td>
				<td><%= ticker.Source %></td>
				<td><%= ticker.PriceBTC %></td>
				<td><%= ticker.PriceUSD %></td>
				<td><%= ticker.TotalBTC %></td>
				<td><%= ticker.TotalUSD %></td>
			</tr>
			<% }); %>
		<% } %>
		</tbody>
		<tfoot>
		<tr>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
			<th><%= (total.btc).toFixed(8) %></th>
			<th><%= (total.usd).toFixed(2) %></th>
		</tr>
		</tfoot>
	</table>
</div>

<%- include('templates/footer'); %>

